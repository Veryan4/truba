{
    "operator": {
        "defaultRuntime": "containerd"
    },
    "driver": {
        "enabled": "false"
    },
    "toolkit": {
        "enabled": "true",
        "env": [
            {"name": "CONTAINERD_CONFIG", "value": "/etc/containerd/config.toml"},
            {"name": "CONTAINERD_SOCKET", "value": "/run/containerd/containerd.sock"},
            {
                "name": "CONTAINERD_SET_AS_DEFAULT",
                "value": "1"
            }
        ]
    }
}
    